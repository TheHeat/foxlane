<style>
	.wrapper {
		display: grid;
		align-items: center;
		text-align: center;

		@media (width > 50rem) {
			text-align: unset;

			grid-template-columns: 1fr min(50%, 40rem);
		}
	}

	.map-links {
		display: grid;
		gap: 1rem;
		list-style: none;
		padding: 0;
	}

	.map-link {
		background-color: var(--color-text);
		color: var(--color-surface);
		text-decoration: none;
		font-weight: 500;
		line-height: 1;
		padding: 0.25em 0.5em;
		border-radius: 0.25em;
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
	}
	.cls-1,
	.cls-2,
	.cls-3,
	.cls-4,
	.cls-5,
	.cls-6,
	.cls-7,
	.cls-8,
	.cls-9 {
		fill: none;
	}

	.cls-2 {
		stroke-linejoin: bevel;
	}

	.cls-2,
	.cls-4 {
		stroke-width: 50px;
	}

	.cls-2,
	.cls-4,
	.cls-5,
	.cls-6,
	.cls-7,
	.cls-8,
	.cls-9 {
		stroke: #f2f1df;
