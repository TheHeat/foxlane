---
import Header from "../components/Header.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width"
		/>
		<link
			rel="icon"
			type="image/svg+xml"
			href="/favicon.svg"
		/>
		<meta
			name="generator"
			content={Astro.generator}
		/>
		<title>Astro Basics</title>
	</head>
	<body>
		<div class="page">
			<Header />
			<slot />
		</div>
	</body>
</html>

<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Arbutus+Slab&display=swap");

	:root {
		--color-brand-100: #f2f1df;
		--color-brand-200: #f29979;
		--color-brand-300: #b44d34;
		--color-brand-400: #732412;
		--color-brand-500: #400101;

		--color-surface: var(--color-brand-300);
		--color-text: var(--color-brand-100);

		--font-headline: "Arbutus Slab", serif;

		--length-spacer: clamp(1rem, 1rem + 3vw, 3rem);
	}
	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
		min-height: 100vh;
		background-color: var(--color-surface);
		color: var(--color-text);
		font-family: var(--font-headline);
	}

	.page {
		margin: auto;
		max-width: max(75vw, 90rem);
	}

	h1 {
		font-family: var(--font-headline);
		font-weight: 400;
		font-style: normal;
		font-size: clamp(2rem, 2vw + 2rem, 4rem);
		text-wrap: balance;
	}
</style>
